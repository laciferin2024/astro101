{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"baseUrl": ".",
		"removeComments": true,
		"noImplicitAny": false,
    "paths": {
      "@/*": ["./*"],
      "@components/*":[ "./src/components/*"], 
    }
  },
}